    <script>
        const headerMenuBottom = document.querySelector(".header-menu-bottom");
        const iconMenu = document.querySelector(".icon-menu")
        const overlay = document.getElementById("overlay")
        let isIconMenuToggled = false;
        iconMenu.addEventListener("click", () => {
            headerMenuBottom.classList.toggle("toggled");
            overlay.style.display = "block"
            isIconMenuToggled = !isIconMenuToggled;
            if (isIconMenuToggled) {
                iconMenu.src = "{{ '../assets/ico_close.png' | asset_url }}";
            } else {
                iconMenu.src = "{{ '../assets/ico_menu.png' | asset_url }}";
                overlay.style.display = "none"
            }
        })
        overlay.addEventListener("click",() => {
            isIconMenuToggled = !isIconMenuToggled;
            overlay.style.display = "none"
            headerMenuBottom.classList.remove("toggled")
            iconMenu.src = "{{ '../assets/ico_menu.png' | asset_url }}";
        })
    </script>
