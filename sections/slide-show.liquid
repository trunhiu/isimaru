{{ 'slide-show.css' | asset_url | stylesheet_tag }}
  <div class="image-slider container">
        {% for block in section.blocks %}
  {% case block.type %}
    {% when 'slide' %}
      <div class="image-item">
        <div class="image">
          <img src = "{{ block.settings.image | img_url: 'original' }}" class="pc-tablet"/>
        </div>
      </div>
  {% endcase %}
{% endfor %}
    </div>

<script>
$(".image-slider").slick({
  dots: true,
  infinite: true,
  autoplay: true,
  autoplaySpeed: 3000,
  arrows: false,
  slidesToShow: 3,
  slidesToScroll: 1,
  responsive: [
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        centerMode: true,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
  ]
});

</script>
{% schema %}
{
  "name": "Slideshow",
  "tag": "section",
  "class": "slideshow",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
       ]
     }
   ]
}
{% endschema %}